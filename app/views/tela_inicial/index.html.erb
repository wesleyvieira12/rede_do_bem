<div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3" style=" text-align: center;">
                    <h1>Bem vindo a Rede do Bem</h1>

                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Escolha sua cidade </h3>

                        </div>
<div class="panel-body">
  <div class="authform">
  <%= form_tag(controller: "home", action: "index") do %>
    
      <div class="form-group">
        <label>Cidade</label>
        <%= select_tag(:id_cidade,options_from_collection_for_select(City.where(status: "ativo"), :id, :city_state),class: "form-control") %>
      </div>
      
     <%= submit_tag("Entrar", class: "btn btn-info form-control") %>
       
   <% end %>
  </div>
</div>

<%= bootstrap_flash %>
</div>
                </div>
            </div>
        </div>