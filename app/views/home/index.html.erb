
<div class="row" style="background: url(bg-pattern.png),linear-gradient(to left,#191970,#8A2BE2); color:#fff; margin:0; ">
	<div class="row">
	
	<div class="col-sm-6 col-sm-offset-3">
	<div class="panel" style="box-shadow:9px 7px 5px rgba(50, 50, 50, 0.77); color: #000;">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-search"></i>Buscar profissionais</h3>
  </div>
  <div class="panel-body">
  <%= search_form_for @q, class: "form-inline", url: busca_path, html: { method: :post } do |f| %>
    <div class="form-group">
		<label>Categoria</label>
        <%= f.select :category_id_eq, options_from_collection_for_select(@categories, "id", "name"),{include_blank: true}, {class: 'form-control'}%>
	</div>
	<div class="form-group ">
		<label>Nome</label>
		<%= f.search_field :name_cont %>
	</div>
	
	
		<%= f.submit class: "btn btn-info", value: "Pesquisar" %>
	<% end %>
	</div>
  </div>
</div>
</div>
            
            <div class="row">

            <h1 style="margin-left:1em; " >CATEGORIAS</h1>
             <% @users.each do |u|%>
	            <div class="col-sm-3 text-center">
              <%= link_to busca_category_id_path(u.category_id) do %>
	                <img class="img-rounded img-responsive img-center" src="https://www.galata.com.br/assets/images/icone-frontend-200x200-29.jpg"  alt="">
                  <% end %>
	                <h4> <%= u.category.name%> </h4>
	           
	            </div>
            <% end %>
	            
	            
           	</div>
           	
            

            
            
        </div>
        <br><br>
        
        <div class="row" style="margin:0;"">
  		<h2>ÚLTIMOS COMENTÁRIOS</h2>
  		<hr>
  		
        <% @comments.each do |c|%>
      		<blockquote>
      		    <p><strong>Profissional: <%= c.service.user_professional.name%></strong></p>
                <p><strong>Comentário:</strong> <%= c.description%></p>
                <footer style="color: #000">Enviado por <strong><%= c.service.user_client.name%></strong></footer>
            </blockquote>
        <% end %>

  		</div>

  		<div class="row"  style="background: url(bg-pattern.png),linear-gradient(to left,#191970,#8A2BE2); color:#fff;">
  		<div class="col-lg-12">
                <h1 >Portifolio
                    <small style="color: #fff">Últimas fotos de serviços</small>
                </h1>
            </div>
        
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row" style="margin: 1em; ">

            <% @images.each do |image| %>

              <div class="col-sm-3 portfolio-item">
                
                <%= image_tag(image.avatar.great.url) if image.avatar? %>

              </div>

            <% end %>
            
        </div>

        <!-- /.row -->
  		</div>
